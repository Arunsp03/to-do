  provider = "prisma-client-js"
}

model Tasks {
    id Int @id @default(autoincrement())
    email String @db.VarChar(255) @default("")
    task String @db.VarChar(255)
    priority Int
    completion_Date String @db.VarChar(255)
    completion_Status Int @default(0)
}